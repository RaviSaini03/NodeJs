<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Profile</title>
  <link rel="stylesheet" href="/stylesheets/index.css">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">

</head>
  <body>

    <nav>
      <a href="/home">
        <img src="https://i.pinimg.com/originals/d3/d1/75/d3d175e560ae133f1ed5cd4ec173751a.png" alt="pin logo" class="img1" />
      </a>
    
      <div class="middle-nav">
        <a href="#" class="home-link">Home</a>
      
        <form action="/search" method="GET" class="search-bar">
          <input type="text" name="query" placeholder="Search..." />
          <button type="submit" class="search-btn">Search</button>
        </form>
      </div>
    
      <div class="nav-profile">
          <img src="https://www.shutterstock.com/image-vector/avatar-gender-neutral-silhouette-vector-600nw-2470054311.jpg" alt="User" class="nav-profile-img" />
        <form action="/logout" method="post">
          <button type="submit" class="logout-btn">Logout</button>
        </form>
      </div>
    </nav>
    

<div class="page-content">
  <div class="profile-container">
    <div class="left-panel">
      <h2>Quick Actions</h2>
      <button class="pin-button">Post a New Picture</button>
      <button class="pin-button">Upload to Pinterest</button>
      <button class="pin-button">View Your Pins</button>
    </div>
    <div class="right-panel">
      <img src="https://www.shutterstock.com/image-vector/avatar-gender-neutral-silhouette-vector-600nw-2470054311.jpg" alt="Profile" class="profile-img" />
      <div class="username">Ravi Saini</div>
      <div class="description">
        Passionate photographer and designer. Love sharing aesthetic moments through pictures. âœ¨
      </div>
    </div>
  </div>
</div>

 <script src="https://code.jquery.com/jquery-3.3.1.js">
  const navSlide = () => {
		const lines = document.querySelector('.lines');
		const nav = document.querySelector('.navLink');
		
		lines.addEventListener('click',() => {
			nav.classList.toggle('nav-active');
			
		//Line Animation
		lines.classList.toggle('toggle');
		});
	   
	}
	
	navSlide();
 </script>
 <script src="app.js"></script>
</body>
         
</html>