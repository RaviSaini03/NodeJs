   </nav>

     <!-- Cards: User -->
  <div class="user-card">
    <!-- Card Cover/Avatar -->
    <div class="card-cover" style="background-image: url('https://cdn.tailkit.com/media/placeholders/photo-JgOeRuGD_Y4-800x400.jpg');">
      <div class="avatar-wrapper">
        <div class="avatar">
          <img src="https://www.shutterstock.com/image-vector/avatar-gender-neutral-silhouette-vector-600nw-2470054311.jpg" alt="User Avatar" class="avatar-img">
